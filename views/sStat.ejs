        //vue資料
        var allTotal = 0;
        let store = new Vue({
            el: '#stat',
            data: {
                storeData: JSON.parse('<%- storeData %>'),
                orderSumData: JSON.parse('<%- orderSumData %>'),
                allTypeData: JSON.parse('<%- allTypeData %>'),
                categoryNameGroup: '',
                currentGroup: '',
                categoryOrdergroup: '',
                currentIndex: 0

            },
            mounted: function () {
                // 類型標籤
                this.categoryNameGroup = this.allTypeData.map(function (item) {
                    categoryName = item.categoryName;
                    return categoryName
                })
                this.categoryNameGroup.unshift('全部');


                // 營運統計用
                // 群組標籤
                this.currentGroup = this.orderSumData.map(function (item) {
                    categoryName = item.categoryName;
                    return categoryName
                })
                this.currentGroup.unshift('全部');


                // 營運統計用
                // 數量標籤
                this.categoryOrdergroup = this.orderSumData.map(function (item) {
                    categoryTotal = item.total;
                    return categoryTotal
                })

                this.orderSumData.forEach(function (item) {
                    allTotal += item.total;
                    return allTotal
                })
                this.categoryOrdergroup.unshift(allTotal);






            },

            methods: {
                switchbutton(index) {
                    this.currentIndex=index;
                }
            }
        })


    </script>


